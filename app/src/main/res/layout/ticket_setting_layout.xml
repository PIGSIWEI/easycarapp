<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/activity_color"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@color/titlecolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/back_ll"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/backarrow_bg" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="@string/back"
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="小票设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ticketsettinglist1"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/select_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:text="小票联数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="235dp"
                android:src="@drawable/arrow_bg"
                android:layout_width="20dp"
                android:layout_height="17dp" />
        </LinearLayout>
        <include layout="@layout/order_line"></include>
        <LinearLayout
            android:id="@+id/ticketsettinglist2"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/select_bg"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:text="小票样式"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="235dp"
                android:src="@drawable/arrow_bg"
                android:layout_width="20dp"
                android:layout_height="17dp" />
        </LinearLayout>
        <include layout="@layout/order_line"></include>

        <LinearLayout
            android:id="@+id/ticketsettinglist3"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/select_bg"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:text="打印停顿"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ticket_pause_tv"
                android:layout_marginTop="15dp"

                android:layout_marginLeft="190dp"
                android:textColor="@color/titlecolor"
                android:text="5秒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/arrow_bg"
                android:layout_width="20dp"
                android:layout_height="17dp" />
        </LinearLayout>
        <include layout="@layout/order_line"></include>

        <LinearLayout
            android:id="@+id/ticketsettinglist4"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/select_bg"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:text="小票提示语"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="170dp"
                android:textColor="@color/titlecolor"
                android:text="不打印"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="7dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/arrow_bg"
                android:layout_width="20dp"
                android:layout_height="17dp" />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/order_line"></include>

</LinearLayout>
