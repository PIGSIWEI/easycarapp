<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/toolbar_bg"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/scan_select_bg"
                        android:id="@+id/scan_iv"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="290dp"
                        android:layout_marginTop="4dp"
                         />

                    <ImageView
                        android:id="@+id/menu_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:src="@drawable/ic_menu" />

                    <TextView
                        android:id="@+id/hometitle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="85dp"
                        android:text="@string/home_title"
                        android:textColor="#ffffff"
                        android:textSize="19dp" />


                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="170dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/recyleview_bgcolor"
            >
         <LinearLayout
             android:layout_gravity="center"
             android:paddingTop="15dp"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:id="@+id/home1"
                 android:orientation="vertical"
                 android:background="@drawable/homelayout_select_bg"
                 android:layout_width="90dp"
                 android:layout_height="90dp">
                 <ImageView
                     android:layout_marginTop="15dp"
                     android:layout_gravity="center_horizontal"
                     android:src="@drawable/home1"
                     android:layout_width="45dp"
                     android:layout_height="45dp" />
                 <TextView
                     android:textColor="@color/black"
                     android:layout_marginTop="5dp"
                     android:layout_gravity="center_horizontal"
                     android:text="班结"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/home2"
                 android:layout_marginLeft="17dp"
                 android:orientation="vertical"
                 android:background="@drawable/homelayout_select_bg"
                 android:layout_width="90dp"
                 android:layout_height="90dp">
                 <ImageView
                     android:layout_marginTop="15dp"
                     android:layout_gravity="center_horizontal"
                     android:src="@drawable/home2"
                     android:layout_width="45dp"
                     android:layout_height="45dp" />
                 <TextView
                     android:textColor="@color/black"
                     android:layout_marginTop="5dp"
                     android:layout_gravity="center_horizontal"
                     android:text="订单"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>
             <LinearLayout
                 android:id="@+id/home3"
                 android:layout_marginLeft="17dp"
                 android:orientation="vertical"
                 android:background="@drawable/homelayout_select_bg"
                 android:layout_width="90dp"
                 android:layout_height="90dp">
                 <ImageView
                     android:layout_marginTop="15dp"
                     android:layout_gravity="center_horizontal"
                     android:src="@drawable/home3"
                     android:layout_width="45dp"
                     android:layout_height="45dp" />
                 <TextView
                     android:textColor="@color/black"
                     android:layout_marginTop="5dp"
                     android:layout_gravity="center_horizontal"
                     android:text="扫一扫"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>
         </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/home4"
                    android:orientation="vertical"
                    android:background="@drawable/homelayout_select_bg"
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home4"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="积分"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home5"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:background="@drawable/homelayout_select_bg"
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home5"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="退款"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home6"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:background="@drawable/homelayout_select_bg"
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home6"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="油品油价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/home7"
                    android:orientation="vertical"
                    android:background="@drawable/homelayout_select_bg"
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home7"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="核销"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home8"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:background="@drawable/homelayout_select_bg"
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home8"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="营销"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home9"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:background="@drawable/homelayout_select_bg"
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home9"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="车辆认证"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


    </LinearLayout>

</RelativeLayout>